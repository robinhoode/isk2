<% unless params[:term].blank? %>
  <div style="margin-bottom: 4em; margin-top: 1em;">
    <div style="font-size: 2em;" class="pull-left">
      Search results for <b><%= params[:term] %></b>
    </div>
  </div>
<% end %>

<table class="table table-striped table-bordered" style="width: 100%;">
  <tr>
    <th></th>
    <th>Book Title</th>
    <th>Author(s)</th>
    <th>Section</th>
    <th>Copies</th>
  </tr>

  <% @titles.each do |title| %>
    <tr>
      <td><%= image_tag title.image_url, style: "min-width: 64px; width: 64px;" %></td>
      <td><%= link_to title.booktitle, title_path(title) %></td>
      <td><%= authors(title) %></td>
      <td><%= title.locations.join(", ").html_safe %></td>
      <td style="text-align: center;">
	      <%= available_copies(title) %>
      </td>
    </tr>
  <% end %>
</table>
