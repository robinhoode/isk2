<h1>Recently Added Titles</h1>

<table class="table table-striped table-bordered" style="width: 100%;">
  <tr>
    <th></th>
    <th>Book Title</th>
    <th>Authors</th>
    <th>Copies</th>
  </tr>

  <% @titles.each do |title| %>
    <tr>
      <td><%= image_tag title.image_url, style: "min-width: 64px; width: 64px;" %></td>
      <td><%= link_to title.booktitle, title_path(title) %></td>
      <td><%= authors(title) %></td>
      <td style="text-align: center;">
	      <%= available_copies(title) %>
      </td>
    </tr>
  <% end %>
</table>

<%= will_paginate @titles %>
